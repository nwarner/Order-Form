<li id="<%= display_item.id %>">
  <%= link_to gravatar_for(display_item.user), display_item.user %>
  <span class="user">
    <%= link_to display_item.user.name, display_item.user %>
  </span>
  <span class="name"><%= display_item.name %></span>
  <span class="billing_frequency"><%= display_item.billing_frequency %></span>
  <span class="timestamp">
    Added <%= time_ago_in_words(display_item.created_at) %> ago.
  </span>
  <% if current_user?(display_item.user) %>
    <%= link_to "delete", display_item, method: :delete,
					data: { confirm: "You sure?" },
					title: display_item.name + " | " + display_item.billing_frequency %>
  <% end %>
</li>
